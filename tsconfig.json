{
	"compilerOptions": {
	  "target": "ES6",                     // or "ES2015"
	  "module": "commonjs",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "outDir": "./dist",
	  "lib": ["ES2015", "DOM"]             // Add this line
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
  }
  